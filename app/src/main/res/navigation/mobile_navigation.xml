<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/fragment_task_list">

    <fragment
        android:id="@+id/fragment_task_list"
        android:name="at.tamburi.tamburimontageservice.ui.MainActivity.MontageTaskScreen.MontageTaskFragment"
        android:label="@string/tasks">
        <action
            android:id="@+id/action_task_list_to_details"
            app:destination="@id/fragment_task_detail"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_service_list"
        android:name="at.tamburi.tamburimontageservice.ui.MainActivity.ServiceTaskFragment.ServiceTaskFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_service_list_to_service_details"
            app:destination="@id/fragment_service_details"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_task_detail"
        android:name="at.tamburi.tamburimontageservice.ui.MainActivity.MontageTaskDetailScreen.MontageTaskDetailFragment"
        android:label="@string/app_name" />

    <fragment
        android:id="@+id/fragment_service_details"
        android:name="at.tamburi.tamburimontageservice.ui.MainActivity.ServiceTaskDetails.ServiceTaskDetailsFragment" >
        <action
            android:id="@+id/action_service_to_claim"
            app:destination="@id/fragment_claim_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_claim_fragment"
        android:name="at.tamburi.tamburimontageservice.ui.MainActivity.ClaimScreen.ClaimFragment" />
</navigation>